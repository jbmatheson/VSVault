{
    "name": "vsvault",
    "displayName": "VSVault",
    "description": "AEM FileVault tool used to interact with a CRX repository",
    "version": "0.0.1",
    "publisher": "rcude54",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
		"onCommand:extension.vaultPush",
        "onCommand:extension.vaultPull"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.vaultPush",
                "title": "Vault Push"
            },
            {
                "command": "extension.vaultPull",
                "title": "Vault Pull"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "explorerResourceIsFolder",
                    "command": "extension.vaultPush",
                    "group": "VSVault"
                },
                {
                    "when": "explorerResourceIsFolder",
                    "command": "extension.vaultPull",
                    "group": "VSVault"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
